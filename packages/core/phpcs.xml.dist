<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <description>Default configuration</description>

    <rule ref="PSR2" />

    <file>./src/</file>
    <file>./config/</file>
    <file>./routes/</file>
    <exclude-pattern>./database/</exclude-pattern>

    <arg phpcs-only="true" value="p"/>
    <arg name="extensions" value="php"/>

    <config name="colors" value="1"/>
</ruleset>
